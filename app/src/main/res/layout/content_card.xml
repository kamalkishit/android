<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contentCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="0dp"
    android:layout_marginLeft="@dimen/mediumMargin"
    android:layout_marginRight="@dimen/mediumMargin"
    android:elevation="6dp"
    android:layout_marginTop="@dimen/largeMargin"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardImage"
            card_view:cardCornerRadius="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:elevation="4dp">

            <ImageView
                android:id="@+id/contentImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/background" />
        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:elevation="4dp"
            android:layout_alignStart="@id/cardImage"
            android:layout_alignBottom="@id/cardImage"
            android:background="@drawable/gradient" >

            <TextView
                android:id="@+id/contentCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/smallMargin"
                android:layout_alignParentStart="true"
                android:textColor="@color/colorWhite"
                android:text="category"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/contentSource"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/smallMargin"
                android:layout_alignParentEnd="true"
                android:textColor="@color/colorWhite"
                android:text="source"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <TextView
            android:id="@+id/contentTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mediumMargin"
            android:layout_marginRight="@dimen/mediumMargin"
            android:layout_marginBottom="@dimen/smallMargin"
            android:layout_marginTop="@dimen/mediumMargin"
            android:textColor="@color/colorSecondary"
            android:layout_below="@id/cardImage"
            android:text="title "
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/contentDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mediumMargin"
            android:layout_marginRight="@dimen/mediumMargin"
            android:layout_marginTop="@dimen/smallMargin"
            android:layout_marginBottom="@dimen/mediumMargin"
            android:layout_below="@+id/contentTitle"
            android:ellipsize="end"
            android:maxLines="5"
            android:text="description"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/contentDescription"
            android:foreground="?android:attr/selectableItemBackground"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/recommendButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorSecondary"
                android:background="@drawable/border_button_grey"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="Recommend"
                android:drawableTop="@drawable/recomended_selected"
                android:textAllCaps="false"
                android:textSize="10sp"
                android:layout_weight="1.0" />

            <Button
                android:id="@+id/bookmarkButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_button_grey"
                android:textColor="@color/colorSecondary"
                android:foreground="?android:attr/selectableItemBackground"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:clickable="true"
                android:text="Bookmark"
                android:drawableTop="@drawable/bookmark_selected"
                android:textAllCaps="false"
                android:textSize="10sp"
                android:layout_weight="1.0" />

            <Button
                android:id="@+id/shareButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_button_grey"
                android:foreground="?android:attr/selectableItemBackground"
                android:textColor="@color/colorSecondary"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:text="Share"
                android:drawableTop="@drawable/share"
                android:textAllCaps="false"
                android:textSize="10sp"
                android:layout_weight="1.0" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
