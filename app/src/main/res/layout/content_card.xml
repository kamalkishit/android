            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll1"
            android:layout_below="@id/contentImage">

            <TextView
                android:id="@+id/contentCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
