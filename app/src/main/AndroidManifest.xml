<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.humanize.android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:name=".util.ApplicationState"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".activity.LaunchScreenActivity"
            android:label="Humanize"
            android:screenOrientation="portrait"
            android:theme="@style/MyMaterialTheme" />
        <activity
            android:name=".activity.CardActivity"
            android:label="HUMANIZE"
            android:screenOrientation="portrait"
            android:theme="@style/MyMaterialTheme" />
        <activity
            android:name=".authentication.activity.LoginActivity"
            android:label="HUMANIZE"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/MyMaterialTheme" />
        <activity
            android:name=".authentication.activity.SignupActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/MyMaterialTheme" />
        <activity
            android:name=".activity.WebBrowserActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/MyMaterialTheme" />
        <activity
            android:name=".activity.PaperLauncherActivity"
            android:label="@string/title_activity_paper_launcher"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/MyMaterialTheme" />
        <activity
            android:name=".activity.PaperActivity"
            android:label="PAPER"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/MyMaterialTheme" />

        <service
            android:name=".AlarmService"
            android:enabled="true" />

        <receiver android:name=".AlarmReceiver" />

        <activity
            android:name=".activity.SubmitActivity"
            android:label="@string/title_activity_submit"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/MyMaterialTheme" />
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name=".activity.CameraActivity"
            android:label="@string/title_activity_camera"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/MyMaterialTheme" />
        <activity
            android:name=".activity.SearchActivity"
            android:label="@string/title_activity_search"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/MyMaterialTheme" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="03639786c99eae8b1629cad76bcef8cb5ffa2aeb" />

        <activity
            android:name=".activity.LikesActivity"
            android:label="@string/title_activity_likes"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/MyMaterialTheme" />
        <activity
            android:name=".activity.BookmarksActivity"
            android:label="@string/title_activity_bookmarks"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/MyMaterialTheme" />
        <activity
            android:name=".activity.SelectCategoriesActivity"
            android:label="@string/title_activity_bookmarks"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/MyMaterialTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.PaperReminderActivity"
            android:label="@string/title_activity_bookmarks"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/MyMaterialTheme" >

        </activity>
        <activity
            android:name=".activity.AppLauncherActivity"
            android:label="Humanize"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/MyMaterialTheme" >

        </activity>
        <activity
            android:name=".NewLoginActivity"
            android:label="@string/title_activity_new_login"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/MyMaterialTheme">

        </activity>
        <activity
            android:name=".NewRegisterActivity"
            android:label="@string/title_activity_new_register"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/MyMaterialTheme">

        </activity>
        <activity
            android:name=".ForgotPassword"
            android:label="@string/title_activity_forgot_password"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/MyMaterialTheme"></activity>
        <activity
            android:name=".activity.InvitationCodeActivity"
            android:label="@string/title_activity_invitation_code"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/MyMaterialTheme"></activity>
    </application>

</manifest>
