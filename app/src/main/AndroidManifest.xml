<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.humanize.android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:name=".util.ApplicationState"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Humanize">

        <activity
            android:name=".activity.AppLauncherActivity"
            android:label="Humanize"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/MaterialDesignTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".activity.CardActivity"
            android:label="HUMANIZE"
            android:screenOrientation="portrait"
            android:theme="@style/MaterialDesignTheme" />

        <activity
            android:name=".activity.WebBrowserActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/MaterialDesignTheme" />

        <activity
            android:name=".activity.PaperLauncherActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/MaterialDesignTheme" />

        <activity
            android:name=".activity.PaperActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/MaterialDesignTheme" />

        <activity
            android:name=".activity.SubmitActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/MaterialDesignTheme" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <activity
            android:name=".activity.CameraActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/MaterialDesignTheme" />

        <activity
            android:name=".activity.SearchActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/MaterialDesignTheme" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="03639786c99eae8b1629cad76bcef8cb5ffa2aeb" />

        <activity
            android:name=".activity.RecommendationsActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/MaterialDesignTheme" />

        <activity
            android:name=".activity.BookmarksActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/MaterialDesignTheme" />

        <activity
            android:name=".activity.SelectCategoriesActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/MaterialDesignTheme" />

        <activity
            android:name=".activity.PaperReminderActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/MaterialDesignTheme" />

        <activity
            android:name=".activity.LoginActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/MaterialDesignTheme"
            android:windowSoftInputMode="stateVisible|adjustResize" />

        <activity
            android:name=".activity.SignupActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/MaterialDesignTheme" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="www.humannize.com"
                    android:scheme="http" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.ForgotPasswordActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/MaterialDesignTheme" />

        <activity
            android:name=".activity.InvitationCodeActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/MaterialDesignTheme" />

        <activity
            android:name=".activity.RecommendArticleActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/MaterialDesignTheme" />

        <activity
            android:name=".activity.AboutUsActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/MaterialDesignTheme" />

        <activity
            android:name=".activity.UsageActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/MaterialDesignTheme" />

        <activity
            android:name=".activity.PrivacyActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/MaterialDesignTheme" />

        <activity
            android:name=".activity.ContactUsActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/MaterialDesignTheme" />

        <activity
            android:name=".activity.ResetPasswordActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/MaterialDesignTheme">
        </activity>

        <activity
            android:name=".activity.EditCategoriesActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/MaterialDesignTheme" />

        <activity
            android:name=".activity.SettingsActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/MaterialDesignTheme">
        </activity>

        <service
            android:name=".AlarmService"
            android:enabled="true" />

        <receiver android:name=".AlarmReceiver" />
    </application>

</manifest>
